@using yzu_course_info_API.ViewModels
@model RegisterViewModel

<h2>註冊</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>註冊成為使用者</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.mId, "帳號", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.mId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.mId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.mPwd, "密碼", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.mPwd, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.mPwd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPwd, "確認密碼", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPwd, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPwd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.mNickname, "暱稱", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.mNickname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.mNickname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="註冊" class="btn btn-default" />
            </div>
        </div>
        <br />
        @Html.ValidationSummary(null, new { @class = "text-danger" })
    </div>
}

<div>
    @Html.ActionLink("返回到登入畫面", "Login")
</div>
